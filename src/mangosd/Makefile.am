INCLUDES += -I$(srcdir) -I$(srcdir)/../../dep/include
INCLUDES += -I$(top_builddir)/src/shared -I$(srcdir)/../shared
INCLUDES += -I$(srcdir)/../game -I$(srcdir)/../framework

bin_PROGRAMS = mangosd

mangosd_SOURCES = \
    Main.cpp \
    Master.cpp \
    Master.h \
    WorldRunnable.cpp \
    WorldRunnable.h \
    CliRunnable.cpp \
    CliRunnable.h \
    RASocket.cpp \
    RASocket.h

mangosd_LDADD = -lgame -ldatabase -lconfig -lauth -lshared -lframework -lZThread -lzlib  -lnetwork -lMaNGOSScript

mangosd_LDFLAGS = -L$(top_builddir)/src/shared \
               -L$(top_builddir)/src/framework \
               -L$(top_builddir)/src/game \
               -L$(top_builddir)/dep/src/zthread \
               -L$(top_builddir)/dep/src/zlib \
	       -L$(top_builddir)/src/bindings/universal

# install mangosd.conf to $(sysconfdir)
sysconf_DATA = \
    mangosd.conf


