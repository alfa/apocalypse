
# --------------------------------------------------------------------
# Mangos configuration file
# --------------------------------------------------------------------
# Use whitespace (tabs and spaces) freely.
# String to the left of the equal sign can be delimited with double
# quotes.
# --------------------------------------------------------------------

[mangos]
version	= 2006060401
realmid	= 1
GameType= 1
DataDir	= "@MANGOSD_DATA@"

[world]
Motd			= "Welcome to the Massive Network Game Object Server." # Message of the Day. Displayed at worldlogin for every user.
PlayerLimit		= 100	# Maximum number of players in the world. Excluding GM's
AddonDefault		= 1	# Default value for enabling addons, Allow then Deny or Deny then Allow
MaxPlayerLevel		= 60	# Max level reached by player.
MaxPrimaryTradeSkill	= 2 # Max count that player can learn the primary trade skill.
WhisperingToGM		= 0# Is GM accept whispers from player by default.

[realmdatabase]
Hostname	= localhost
Port		= 3306
Username	= mangos
Password	= mangos
DBname		= realmd

[worlddatabase]
Hostname	= localhost
Port		= 3306
Username	= mangos
Password	= mangos
DBname		= realmd

[logger]
Heading			= "ACE - Adaptive Communication Environment"
SeekIndex               = 14
TraceLevel              = 6	# Can comment lines like this
Justification		= left_justified
LogFilePath             = log/
TransactionFilePath 	= data/
LogLevel		= 3
LogWorld		= 1

[Rate]
Health	= 1
Power1	= 1
Power2	= 1
Power3	= 1
Drop	= 1

[XP]
XP = 1

[RemoteAccess]
Port		= 3443	# Default remote console port
Log		= 1	# Log remote console connections
MinLevel	= 3	# Minimum level that's required to login,3 by default
Secure		= 1	# Kick client on wrong pass

[Timers]
# All times are in milliseconds.

# Default socket select time
SocketSelectTime = 10000

# Default grid clean up delay
GridCleanUpDelay = 300000

# Default map update interval
MapUpdateInterval = 100

# Default weather update interval
ChangeWeatherInterval = 600000

# Default PlayerSaveInterval
PlayerSaveInterval = 900000

# Default WorldServerPort
WorldServerPort = 8085