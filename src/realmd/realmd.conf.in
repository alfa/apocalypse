# MaNGOS realmd configuration file
ConfVersion=2006060401

# Database connection settings for the realm server.
# Default: hostname;port;username;password;database
LoginDatabaseInfo = "127.0.0.1;3306;mangos;mangos;realmd"

# Default RealmServer Host and port
#Default hostname or ip :port
RealmServerHost = "localhost:3724"

# Default RealmServer Threads
RealmNumberOfThreads = 5

#Default RealmServer LogFile
RealmServerLogFile = "realmd.log"

# Default RealmServer Level
#  debug;info;notice;warning;error;critical;alert;emergency;
RealmServerLogLeveL = "notice;warning;error;critical;alert;emergency"
